<div class="seller-home-container">
  <div class="seller-home-header">
    <div>
      <h1>Liked Listings</h1>
      <p class="header-subtitle">Items you're interested in</p>
    </div>
  </div>

  <div class="seller-listings">
    <div class="listings-header">
      <h2>Your Liked Items (<%= @listings.count %>)</h2>
      <% unless @listings.empty? %>
        <div class="listings-filter">
          <span class="filter-label">Sort by:</span>
          <select id="listingsSort" class="sort-select">
            <option value="newest">Newest First</option>
            <option value="oldest">Oldest First</option>
            <option value="price-high">Price: High to Low</option>
            <option value="price-low">Price: Low to High</option>
          </select>
        </div>
      <% end %>
    </div>

    <% if @listings.empty? %>
      <div class="empty-state">
        <h3>No liked listings yet</h3>
        <p>Start liking items in the swipe feed!</p>
        <%= link_to feed_path, class: "btn btn-primary" do %>
          <svg class="btn-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M11.47 3.84a.75.75 0 011.06 0l8.69 8.69a.75.75 0 101.06-1.06l-8.689-8.69a2.25 2.25 0 00-3.182 0l-8.69 8.69a.75.75 0 001.061 1.06l8.69-8.69z" />
            <path d="M12 5.432l8.159 8.159c.03.03.06.058.091.086v6.198c0 1.035-.84 1.875-1.875 1.875H15a.75.75 0 01-.75-.75v-4.5a.75.75 0 00-.75-.75h-3a.75.75 0 00-.75.75V21a.75.75 0 01-.75.75H5.625a1.875 1.875 0 01-1.875-1.875v-6.198a2.29 2.29 0 00.091-.086L12 5.43z" />
          </svg>
          <span>Go to Swipe Feed</span>
        <% end %>
      </div>
    <% else %>
      <div class="listings-grid">
        <% @listings.each do |listing| %>
          <div class="listing-card" data-created="<%= listing.created_at.to_i %>" data-price="<%= listing.price %>">
            <div class="listing-header">
              <h3><%= link_to listing.title, listing_path(listing), class: "listing-title-link" %></h3>
              <span class="listing-price"><%= number_to_currency(listing.price) %></span>
            </div>

            <div class="listing-meta">
              <span class="listing-category">
                <svg class="meta-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path fill-rule="evenodd" d="M5.25 2.25a3 3 0 00-3 3v4.318a3 3 0 00.879 2.121l9.58 9.581c.92.92 2.39 1.186 3.548.428a18.849 18.849 0 005.441-5.44c.758-1.16.492-2.629-.428-3.548l-9.58-9.581a3 3 0 00-2.122-.879H5.25zM6.375 7.5a1.125 1.125 0 100-2.25 1.125 1.125 0 000 2.25z" clip-rule="evenodd" />
                </svg>
                <%= listing.category.presence || "Uncategorized" %>
              </span>
              <span class="listing-date">
                <svg class="meta-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zM12.75 6a.75.75 0 00-1.5 0v6c0 .414.336.75.75.75h4.5a.75.75 0 000-1.5h-3.75V6z" clip-rule="evenodd" />
                </svg>
                <%= time_ago_in_words(listing.created_at) %> ago
              </span>
            </div>

            <div class="listing-description">
              <%= truncate(listing.description, length: 120) %>
            </div>

            <div class="listing-actions">
              <%= link_to listing_conversations_path(listing),
                          data: { turbo_method: :post },
                          class: "btn btn-view" do %>
                <svg class="btn-icon-sm" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.804 21.644A6.707 6.707 0 006 21.75a6.721 6.721 0 003.583-1.029c.774.182 1.584.279 2.417.279 5.322 0 9.75-3.97 9.75-9 0-5.03-4.428-9-9.75-9s-9.75 3.97-9.75 9c0 2.409 1.025 4.587 2.674 6.192.232.226.277.428.254.543a3.73 3.73 0 01-.814 1.686.75.75 0 00.44 1.223z" clip-rule="evenodd" />
                </svg>
                <span>Message Seller</span>
              <% end %>
              <%= link_to listing_path(listing, from: 'liked'), class: "btn btn-edit" do %>
                <svg class="btn-icon-sm" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 15a3 3 0 100-6 3 3 0 000 6z" />
                  <path fill-rule="evenodd" d="M1.323 11.447C2.811 6.976 7.028 3.75 12.001 3.75c4.97 0 9.185 3.223 10.675 7.69.12.362.12.752 0 1.113-1.487 4.471-5.705 7.697-10.677 7.697-4.97 0-9.186-3.223-10.675-7.69a1.762 1.762 0 010-1.113zM17.25 12a5.25 5.25 0 11-10.5 0 5.25 5.25 0 0110.5 0z" clip-rule="evenodd" />
                </svg>
                <span>View Details</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<style>
    /* Icon sizing - same as seller homepage */
    .btn-icon-sm {
        width: 16px;
        height: 16px;
    }

    .btn-icon {
        width: 20px;
        height: 20px;
    }

    .meta-icon {
        width: 14px;
        height: 14px;
        stroke: #999;
    }

    /* Reuse seller homepage styles */
    .seller-home-container {
        padding: 2rem;
        max-width: 1600px;
        margin: 0 auto;
        min-height: calc(100vh - 80px);

        @media (max-width: 768px) {
          padding: 1rem;
        }
    }

    .seller-home-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .seller-home-header h1 {
        color: var(--color-gray-800);
        font-size: 2.5rem;
        margin: 0 0 4px 0;
        font-weight: 700;
    }

    .header-subtitle {
        color: var(--color-gray-500);
        font-size: 1rem;
        margin: 0;
    }

    .seller-listings {
        margin-top: 40px;
    }

    .listings-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .listings-header h2 {
        font-size: 1.75rem;
        margin: 0;
        color: #333;
    }

    .listings-filter {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .filter-label {
        font-size: 0.9rem;
        color: #666;
    }

    .sort-select {
        padding: 8px 12px;
        border: 1px solid #d0d0d0;
        border-radius: 6px;
        font-size: 0.9rem;
        cursor: pointer;
        background: white;
    }

    .sort-select:focus {
        outline: none;
        border-color: #a7333f;
    }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        background: white;
        border-radius: 16px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .empty-state h3 {
        font-size: 2rem;
        margin: 0 0 16px 0;
        color: #333;
    }

    .empty-state p {
        font-size: 1.2rem;
        color: #666;
        margin: 0 0 32px 0;
    }

    .listings-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 24px;
    }

    .listing-card {
        background: white;
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s, box-shadow 0.2s;
        position: relative;
    }

    .listing-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
    }

    .listing-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 12px;
        gap: 12px;
    }

    .listing-header h3 {
        font-size: 1.25rem;
        margin: 0;
        flex: 1;
    }

    .listing-title-link {
        color: #333;
        text-decoration: none;
        transition: color 0.2s;
    }

    .listing-title-link:hover {
        color: #a7333f;
    }

    .listing-price {
        font-size: 1.25rem;
        font-weight: bold;
        color: #a7333f;
        white-space: nowrap;
    }

    .listing-meta {
        display: flex;
        flex-direction: column;
        gap: 8px;
        margin-bottom: 12px;
        font-size: 0.85rem;
    }

    .listing-category,
    .listing-date {
        display: flex;
        align-items: center;
        gap: 6px;
        color: #666;
    }

    .listing-description {
        color: #666;
        margin-bottom: 20px;
        line-height: 1.6;
        min-height: 60px;
    }

    .listing-actions {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 10px 16px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
        border: none;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-view {
        background-color: #a7333f;
        color: white;
        flex: 1;
    }

    .btn-view:hover {
        background-color: #8b2a35;
    }

    .btn-edit {
        background-color: #a7333f;
        color: white;
        flex: 1;
    }

    .btn-edit:hover {
        background-color: #8b2a35;
    }

    @media (max-width: 768px) {
        .seller-home-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 16px;
        }

        .listings-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const sortSelect = document.getElementById('listingsSort');
        if (sortSelect) {
            sortSelect.addEventListener('change', function() {
                const grid = document.querySelector('.listings-grid');
                const cards = Array.from(grid.querySelectorAll('.listing-card'));

                cards.sort((a, b) => {
                    switch(this.value) {
                        case 'newest':
                            return parseInt(b.dataset.created) - parseInt(a.dataset.created);
                        case 'oldest':
                            return parseInt(a.dataset.created) - parseInt(b.dataset.created);
                        case 'price-high':
                            return parseFloat(b.dataset.price) - parseFloat(a.dataset.price);
                        case 'price-low':
                            return parseFloat(a.dataset.price) - parseFloat(b.dataset.price);
                    }
                });

                cards.forEach(card => grid.appendChild(card));
            });
        }
    });
</script>