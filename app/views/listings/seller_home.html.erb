<div class="seller-home-container">
  <div class="seller-home-header">
    <div>
      <h1>Seller Dashboard</h1>
      <p class="header-subtitle">Manage your listings</p>
    </div>
    <%= link_to new_listing_path, class: "btn btn-primary btn-create" do %>
      <%= icon "plus-circle", class: "btn-icon" %>
      <span>Create New Listing</span>
    <% end %>
  </div>

  <div class="seller-stats">
    <div class="stat-card">
      <div class="stat-content">
        <div class="stat-value"><%= @listings.count %></div>
        <div class="stat-label">Total Listings</div>
      </div>
    </div>
    <div class="stat-card">
      <div class="stat-content">
        <div class="stat-value"><%= @listings.where("created_at > ?", 7.days.ago).count %></div>
        <div class="stat-label">This Week</div>
      </div>
    </div>
    <div class="stat-card">
      <div class="stat-content">
        <div class="stat-value"><%= number_to_currency(@listings.sum(:price)) %></div>
        <div class="stat-label">Total Value</div>
      </div>
    </div>
  </div>

  <div class="seller-listings">
    <div class="listings-header">
      <h2>Your Listings (<%= @listings.count %>)</h2>
      <% unless @listings.empty? %>
        <div class="listings-filter">
          <span class="filter-label">Sort by:</span>
          <select id="listingsSort" class="sort-select">
            <option value="newest">Newest First</option>
            <option value="oldest">Oldest First</option>
            <option value="price-high">Price: High to Low</option>
            <option value="price-low">Price: Low to High</option>
          </select>
        </div>
      <% end %>
    </div>
    
    <% if @listings.empty? %>
      <div class="empty-state">
        <h3>No listings yet</h3>
        <p>Start selling by creating your first listing!</p>
        <%= link_to new_listing_path, class: "btn btn-primary" do %>
          <%= icon "plus-circle", class: "btn-icon" %>
          <span>Create Your First Listing</span>
        <% end %>
      </div>
    <% else %>
      <div class="listings-grid">
        <% @listings.each do |listing| %>
          <div class="listing-card" id="listing_<%= listing.id %>" data-created="<%= listing.created_at.to_i %>" data-price="<%= listing.price %>">
            <div class="listing-header">
              <h3><%= link_to listing.title, listing_path(listing), class: "listing-title-link" %></h3>
              <span class="listing-price"><%= number_to_currency(listing.price) %></span>
            </div>
            
            <div class="listing-meta">
              <span class="listing-category">
                <%= icon "tag", class: "meta-icon" %>
                <%= listing.category.presence || "Uncategorized" %>
              </span>
              <span class="listing-date">
                <%= icon "clock", class: "meta-icon" %>
                <%= time_ago_in_words(listing.created_at) %> ago
              </span>
            </div>
            
            <div class="listing-description">
              <%= truncate(listing.description, length: 120) %>
            </div>
            
            <div class="listing-actions">
              <%= link_to listing_path(listing), class: "btn btn-view" do %>
                <%= icon "eye", class: "btn-icon-sm" %>
                <span>View</span>
              <% end %>
              <%= link_to edit_listing_path(listing), class: "btn btn-edit" do %>
                <%= icon "pencil", class: "btn-icon-sm" %>
                <span>Edit</span>
              <% end %>
              <%= link_to listing_path(listing), 
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete '#{listing.title}'?" }, 
                  class: "btn btn-delete" do %>
                <%= icon "trash", class: "btn-icon-sm" %>
                <span>Delete</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const sortSelect = document.getElementById('listingsSort');
  if (sortSelect) {
    sortSelect.addEventListener('change', function() {
      const grid = document.querySelector('.listings-grid');
      const cards = Array.from(grid.querySelectorAll('.listing-card'));
      
      cards.sort((a, b) => {
        switch(this.value) {
          case 'newest':
            return parseInt(b.dataset.created) - parseInt(a.dataset.created);
          case 'oldest':
            return parseInt(a.dataset.created) - parseInt(b.dataset.created);
          case 'price-high':
            return parseFloat(b.dataset.price) - parseFloat(a.dataset.price);
          case 'price-low':
            return parseFloat(a.dataset.price) - parseFloat(b.dataset.price);
        }
      });
      
      cards.forEach(card => grid.appendChild(card));
    });
  }
});
</script>

