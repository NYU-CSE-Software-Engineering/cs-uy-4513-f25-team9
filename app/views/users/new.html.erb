
<div class="login-container">
  <div class="login-box">
    <h1>Create Account</h1>
    <%= form_with model: @user, url: users_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autocomplete: "name", placeholder: "Your name" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "your@email.com" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Create a password" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Password confirmation" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Re-enter password" %>
      </div>
      <%= f.submit "Sign up" %>
    <% end %>
    <div class="divider">or</div>
    <%= link_to 'Already have an account?', login_path, class: 'btn-secondary' %>
  </div>
</div>
