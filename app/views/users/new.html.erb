
<div class="login-container">
  <div class="login-box">
    <h1>Sign Up</h1>
    <% if @user && @user.errors.any? %>
      <div style="color: #e53e3e; background: #fff5f5; border: 1px solid #feb2b2; border-radius: 8px; padding: 0.75rem; margin-bottom: 1rem; width: 100%; text-align: center; font-weight: 500;">
        <ul style="list-style: none; padding: 0; margin: 0;">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg.ends_with?(".") ? msg : "#{msg}." %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model: @user, url: users_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Password confirmation" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <%= f.submit "Sign up" %>
    <% end %>
    <div style="margin-top: 1.5rem; width: 100%; text-align: center;">
      <span style="color: #a0aec0; font-size: 0.95rem;">or</span>
    </div>
    <%= link_to 'Log in', login_path, class: 'btn', style: 'margin-top: 0.5rem; width: 100%; background: #e2e8f0; color: #2563eb; border-radius: 8px; font-weight: 600; padding: 0.75rem; display: inline-block; text-align: center; text-decoration: none; transition: background 0.2s;' %>
  </div>
</div>
