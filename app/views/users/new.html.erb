<h1>Sign Up</h1>

<%= form_with model: @user, url: users_path, local: true do |f| %>
  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation, "Password confirmation" %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit "Sign up" %>
<% end %>
